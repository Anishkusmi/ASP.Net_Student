@model IEnumerable<StudentCURD.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3 style="background-color:green">@TempData["success"]</h3>
@*    <h3 style="background-color:green">@Html.Raw(TempData["success"])</h3>*@
<h3 style="background-color:green">@ViewBag.error</h3>
<p class="btn btn-info">
    @Html.ActionLink("Create New", "Create")
</p>
<div class="d-flex" action="Index" controller="Student">
    <input name="searchString" class="form-control m-1" type="search" placeholder="Search" aria-label="Search" />
    <button class="btn btn-dark" type="submit">Search by Name</button>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success"}) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
